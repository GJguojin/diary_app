<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="25dp"
    android:paddingLeft="10dp"
    android:background="?android:attr/selectableItemBackground">

   <com.gj.diary.view.DiaryImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/diary_query_picture"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="1dp"
        android:visibility="visible"
        app:ratio="1.7808" />

    <TextView
        android:id="@+id/diary_node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/diary_query_picture"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@id/diary_query_picture"
        android:layout_marginRight="15dp"
        android:text="2017-06-28"
        android:textSize="18dp" />

</RelativeLayout>