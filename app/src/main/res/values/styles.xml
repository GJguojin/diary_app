<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="colorBorder">@color/colorBorder_dark</item>
        <item name="colorButton">@color/colorBorder_dark</item>
        <item name="colorFont">@color/colorFont_dark</item>
        <item name="android:textColor">@color/colorFont_dark</item>
        <item name="android:editTextColor">@color/colorFont_dark</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_blue</item>
        <item name="colorAccent">@color/colorAccent_blue</item>
        <item name="colorBorder">@color/colorBorder_blue</item>
        <item name="colorButton">@color/colorBorder_blue</item>
        <item name="colorFont">@color/colorFont_blue</item>
        <item name="android:textColor">@color/colorFont_blue</item>
        <item name="android:editTextColor">@color/colorFont_blue</item>
    </style>

    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_pink</item>
        <item name="colorAccent">@color/colorAccent_pink</item>
        <item name="colorBorder">@color/colorBorder_pink</item>
        <item name="colorButton">@color/colorBorder_pink</item>
        <item name="colorFont">@color/colorFont_pink</item>
        <item name="android:textColor">@color/colorFont_pink</item>
        <item name="android:editTextColor">@color/colorFont_pink</item>
    </style>

    <style name="RedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_red</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_red</item>
        <item name="colorAccent">@color/colorAccent_red</item>
        <item name="colorBorder">@color/colorBorder_red</item>
        <item name="colorButton">@color/colorBorder_red</item>
        <item name="colorFont">@color/colorFont_red</item>
        <item name="android:textColor">@color/colorFont_red</item>
        <item name="android:editTextColor">@color/colorFont_red</item>
    </style>

    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_yellow</item>
        <item name="colorAccent">@color/colorAccent_yellow</item>
        <item name="colorBorder">@color/colorBorder_yellow</item>
        <item name="colorButton">@color/colorBorder_yellow</item>
        <item name="colorFont">@color/colorFont_yellow</item>
        <item name="android:textColor">@color/colorFont_yellow</item>
        <item name="android:editTextColor">@color/colorFont_yellow</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_green</item>
        <item name="colorAccent">@color/colorAccent_green</item>
        <item name="colorBorder">@color/colorBorder_green</item>
        <item name="colorButton">@color/colorBorder_green</item>
        <item name="colorFont">@color/colorFont_green</item>
        <item name="android:textColor">@color/colorFont_green</item>
        <item name="android:editTextColor">@color/colorFont_green</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!-- my loading dialog -->
    <style name="LoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>

    <style name="Custom.Actionbar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/Custom.TextAppearance.Actionbar</item>
    </style>

    <style name="Custom.TextAppearance.Actionbar" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

    <!-- actionbar标题文字尺寸 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

    <!-- actionbar菜单文字尺寸 -->
    <style name="ToolbarMenuText" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Transparent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
